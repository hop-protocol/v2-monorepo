{
  "name": "@hop-protocol/v2-bundle-relayer",
  "version": "0.0.0-beta.0",
  "description": "The Hop v2 bundle relayer worker",
  "main": "dist/index.js",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "test": "jest test",
    "test:db": "jest test/db.test.ts",
    "test:indexer": "jest test/indexer.test.ts",
    "start": "npm run build-info && node bin/relayer",
    "typecheck": "tsc",
    "dev": "npm run build-info && tsc -p tsconfig.build.json --watch",
    "start:worker": "node ./bin/relayer worker --server",
    "build-info": "echo \"{\\\"rev\\\": \\\"${GIT_REV:-`git rev-parse --short HEAD`}\\\"}\" > src/.build-info.json",
    "postinstall": "mkdir -p dist/src && npm run build-info && cp src/.build-info.json dist/src/.build-info.json",
    "build": "npm run build-info && tsc -p tsconfig.build.json",
    "lint": "eslint --fix \"src/**/*\" \"test/**/*\"",
    "clean": "rimraf dist",
    "lerna:sync": "npx lerna-sync-version",
    "version:bump": "npm version prerelease --preid=beta",
    "publish:latest": "npm publish --tag latest --access public",
    "publish:beta": "npm publish --tag beta --access public",
    "publish:next": "npm publish --tag next --access public",
    "release": "npm run clean && npm run publish:latest",
    "bump-release": "npm run version:bump && npm run lerna:sync && npm run release",
    "prepare": "npm run lint && npm run build"
  },
  "bin": {
    "relayer": "bin/relayer"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ethersproject/hdnode": "5.0.9",
    "@hop-protocol/v2-core": "0.0.0-beta.3",
    "@hop-protocol/v2-sdk": "0.0.0-beta.11",
    "@slack/web-api": "6.7.2",
    "async-mutex": "0.3.2",
    "bip39": "3.0.4",
    "commander": "6.2.1",
    "console-clear": "1.1.1",
    "cors": "^2.8.5",
    "dotenv": "8.6.0",
    "ethers": "5.7.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "fast-memoize": "2.5.2",
    "keythereum": "1.2.0",
    "level": "8.0.0",
    "level-party": "5.1.1",
    "lodash": "^4.17.21",
    "luxon": "1.28.0",
    "memory-cache": "^0.2.0",
    "merkletreejs": "0.2.32",
    "minimist": "1.2.6",
    "mkdirp": "0.5.6",
    "module-alias": "2.2.2",
    "node-fetch": "2.6.7",
    "p-queue": "6.6.2",
    "prompt": "1.2.2",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "subleveldown": "6.0.1",
    "wait": "^0.4.2"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/jest": "^26.0.20",
    "@types/level": "^6.0.0",
    "@types/lodash": "^4.14.168",
    "@types/luxon": "^1.26.5",
    "@types/memory-cache": "^0.2.2",
    "@types/mkdirp": "^1.0.1",
    "@types/node-fetch": "^2.5.10",
    "@types/pidusage": "^2.0.1",
    "@types/pify": "^5.0.1",
    "@types/prompt": "^1.1.0",
    "@types/rimraf": "^3.0.0",
    "@types/subleveldown": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-unused-imports": "^1.1.2",
    "jest": "^26.6.3",
    "lerna-sync-version": "^0.0.6",
    "ts-jest": "^26.5.2",
    "typescript": "4.5.3"
  },
  "_moduleAliases": {
    "src": "src"
  }
}
